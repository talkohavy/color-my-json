{
  "name": "color-my-json",
  "version": "0.0.3",
  "description": "A single function to color you json for pretty display in the console.",
  "private": "true",
  "type": "module",
  "keywords": ["json", "color", "pretty", "console", "display"],
  "main": "index.js",
  "exports": {
    ".": {
      "types": "./index.d.js",
      "default": "./index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint -c eslint.config.js",
    "format-check": "prettier . --check",
    "format-fix": "prettier . --write",
    "test": "node --test",
    "typecheck": "tsc -p tsconfig.json",
    "build": "export NODE_ENV=production && node ./build.config.js",
    "build:dev": "export NODE_ENV=development && node ./build.config.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talkohavy/color-my-json.git"
  },
  "bugs": {
    "url": "https://github.com/talkohavy/color-my-json/issues",
    "email": "talkohavy@gmail.com"
  },
  "author": "Tal Kohavy <talkohavy@gmail.com> (https://github.com/talkohavy)",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "eslint": "^9.25.1",
    "eslint-plugin-perfectionist": "^4.12.1",
    "eslint-plugin-react-compiler": "19.1.0-rc.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "rollup": "^4.40.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
}
